{% extends 'base.html.twig' %}

{% block title %}Login required!{% endblock %}

{% block head %}
  <meta name="google-signin-client_id" content="{{ oauth_google_client_id }}">
{% endblock %}

{% block body %}

<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.2&appId=333390310869668&autoLogAppEvents=1"></script>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Login requred!</h1>

<!--
<div class="fb-login-button" data-size="large" data-button-type="login_with" data-auto-logout-link="true" data-use-continue-as="true"></div>
<div id="my-signin2"></div>
-->

  <script>
    function onSuccess(googleUser) {
      console.log('Logged in as: ' + googleUser.getBasicProfile().getName());
// Simulate a mouse click:
//window.location.href = "https://sym.chesscheat.com/connect/google";
    }
    function onFailure(error) {
      console.log(error);
    }
    function renderButton() {
      gapi.signin2.render('my-signin2', {
        'scope': 'profile email',
        'width': 240,
        'height': 50,
        'longtitle': true,
        'theme': 'dark',
        'onsuccess': onSuccess,
        'onfailure': onFailure
      });
    }
  </script>

  <script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>

<a href="/connect/facebook"><img src="img/facebook_icon.png"/> Log in with Facebook</a>
<a href="/connect/google"><img src="img/google_icon.png"/> Log in with Google</a>
<a href="/connect/lichess"><img src="img/lichess_icon.svg"/> Log in with Lichess</a>

</div>
{% endblock %}
